<h1>All meals</h1>
  <li><%= link_to "Add a meal", new_meal_path %></li>
<ul>
  <% @meals.each do |meal| %>
    <li><%= link_to meal.name, meal_path(meal) %></li>
    <li><%= meal.user.name %></li>
    <%= link_to "Delete",
        meal_path(meal),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>
