<div class="background-image container" alt="chef">
  <h1>My Chef Bookings</h1>
  <%= link_to "Back to my bookings", my_bookings_path, class: "red_button" %>
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-5 mt-4">
        <div class="card h-100" style="width: 18rem;">
          <div class="card-body">
            <h3 class="card-title"><%= booking.meal.name %></h3>
            <p class="card-title"><%= booking.location %></p>
            <p class="card-title"><%= booking.date %></p>
            <p><%= link_to "Cancel this booking",
                          booking_path(booking),
                          method: :delete,
                          data: { confirm: "Are you sure?" } %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
 </div>